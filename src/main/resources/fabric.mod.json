  "authors": [
    "Kluzzio"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/loot-config",
    "sources": "https://github.com/Kluzzio/LootConfig",
    "issues": "https://github.com/Kluzzio/LootConfig/issues"
  },

